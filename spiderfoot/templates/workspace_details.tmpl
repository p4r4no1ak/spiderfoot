// Helper function to automatically add CSRF token to jQuery AJAX requests
$(document).ready(function() {
    // Set up CSRF token for all AJAX requests
    if (window.csrf_token) {
        $.ajaxSetup({
            beforeSend: function(xhr, settings) {
                if (settings.type == 'POST' || settings.type == 'PUT' || settings.type == 'DELETE') {
                    // Check if data is already an object
                    if (typeof settings.data === 'string') {
                        // If data is a string, parse it and add CSRF token
                        try {
                            var data = settings.data ? settings.data.split('&').reduce(function(obj, pair) {
                                var parts = pair.split('=');
                                obj[decodeURIComponent(parts[0])] = decodeURIComponent(parts[1] || '');
                                return obj;
                            }, {}) : {};
                            data.csrf_token = window.csrf_token;
                            settings.data = $.param(data);
                        } catch (e) {
                            // If parsing fails, just append the token
                            settings.data += (settings.data ? '&' : '') + 'csrf_token=' + encodeURIComponent(window.csrf_token);
                        }
                    } else if (typeof settings.data === 'object') {
                        // If data is already an object, just add the token
                        settings.data = settings.data || {};
                        settings.data.csrf_token = window.csrf_token;
                    }
                }
            }
        });
    }
});

