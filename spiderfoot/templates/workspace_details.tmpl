        })
        .fail(function() {
            $('#periodic-scans-content').html('<div class="alert alert-danger">Failed to load periodic scans</div>');
        });
}

// Update scheduled scans status in the activity panel
function updateScheduledScansStatus() {
    $.get('${docroot}/workspaceperiodicscans', {workspace_id: '${workspace.workspace_id}'})
        .done(function(data) {
            var html = '';
            if (data.success && data.schedules && data.schedules.length > 0) {
                var activeScans = data.schedules.filter(function(s) { return s.status === 'ACTIVE'; });
                var pausedScans = data.schedules.filter(function(s) { return s.status === 'PAUSED'; });
                
                if (activeScans.length > 0) {
                    html += '<span class="label label-success">' + activeScans.length + ' Active</span><br>';
                }
                if (pausedScans.length > 0) {
                    html += '<span class="label label-warning">' + pausedScans.length + ' Paused</span><br>';
                }
                
                // Show next scheduled scan
                var nextScan = activeScans.find(function(s) { return s.next_run; });
                if (nextScan) {
                    html += '<small>Next: ' + nextScan.next_run + '</small>';
                }
            } else {
                html = '<small class="text-muted">None scheduled</small>';
            }
            $('#scheduledScansStatus').html(html);
        })
        .fail(function() {
            $('#scheduledScansStatus').html('<small class="text-danger">Error loading</small>');
        });
}
